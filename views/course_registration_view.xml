<odoo>
    <!-- Tree View for Course Registrations -->
    <record id="view_course_registration_tree" model="ir.ui.view">
        <field name="name">course.registration.tree</field>
        <field name="model">course.registration</field>
        <field name="arch" type="xml">
            <list string="Course Registrations">
                <field name="student_id"/>
                <field name="semester_id"/>
                <field name="batch_id"/>
                <field name="academic_year_id"/>
                <field name="registration_date"/>
                <field name="state" widget="badge"
                       decoration-info="state == 'draft'"
                       decoration-success="state == 'confirmed'"/>
            </list>
        </field>
    </record>

    <!-- Search View for Course Registrations -->
    <record id="view_course_registration_search" model="ir.ui.view">
        <field name="name">course.registration.search</field>
        <field name="model">course.registration</field>
        <field name="arch" type="xml">
            <search string="Search Course Registrations">
                <field name="student_id"/>
                <field name="semester_id"/>
                <field name="batch_id"/>
                <field name="academic_year_id"/>
                <field name="state"/>
                <filter string="Draft" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Confirmed" name="confirmed" domain="[('state', '=', 'confirmed')]"/>
            </search>
        </field>
    </record>

    <!-- Form View for Course Registration -->
    <record id="view_course_registration_form" model="ir.ui.view">
        <field name="name">course.registration.form</field>
        <field name="model">course.registration</field>
        <field name="arch" type="xml">
            <form string="Course Registration">
                <sheet>
                    <header>
                        <button name="action_confirm_registration" type="object" class="btn-primary" string="confirmed"
                                invisible="state =='confirmed'"/>
                    </header>

                    <group name="registration_info" string="Registration Details">
                        <field name="student_id" options="{'no_create': True}"/>
                        <field name="semester_id" options="{'no_create': True}"/>
                        <field name="batch_id" options="{'no_create': True}"/>
                        <field name="academic_year_id" options="{'no_create': True}"/>
                        <field name="registration_date"/>
                        <field name="state" widget="badge" readonly="1"/>
                    </group>
                    <notebook>
                        <page string="Courses">
                            <field name="course_line_ids">
                                <list string="Courses" editable="bottom">
                                    <field name="course_id"/>
                                </list>
                                <form>
                                    <group>
                                        <field name="registration_id" invisible="1"/>
                                        <field name="course_id" options="{'no_create': True}"/>
                                    </group>
                                </form>
                            </field>
                        </page>
                    </notebook>
                    <footer>
                        <button string="Confirm Registration"
                                type="object"
                                name="action_confirm_registration"
                                class="btn-primary"
                                invisible="state != 'draft'"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Form View for Course Registration Line -->
    <record id="view_course_registration_line_form" model="ir.ui.view">
        <field name="name">course.registration.line.form</field>
        <field name="model">course.registration.line</field>
        <field name="arch" type="xml">
            <form string="Course Registration Line">
                <sheet>
                    <group>
                        <field name="registration_id" invisible="1"/>
                        <field name="course_id" options="{'no_create': True}"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Action for Course Registrations -->
    <record id="action_course_registration" model="ir.actions.act_window">
        <field name="name">Course Registrations</field>
        <field name="res_model">course.registration</field>
        <field name="view_mode">list,form</field>
        <!-- view_ids is optional unless you need custom sequence -->
    </record>

    <!-- Menu Item for Course Registrations -->
    <menuitem id="menu_course_registration"
              name="Registrations"
              parent="menu_university_admission_root"
              action="action_course_registration"
              sequence="10"/>
</odoo>
