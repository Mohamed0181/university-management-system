<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Form View -->
    <record id="university_attendance_view_form" model="ir.ui.view">
        <field name="name">university.attendance.view.form</field>
        <field name="model">university.attendance</field>
        <field name="arch" type="xml">
            <form string="Attendance">
                <header>
                    <button name="action_attendance_done" type="object"
                            string="Done" class="oe_highlight"
                            invisible="state != 'draft'"/>
                    <field name="state" widget="statusbar"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="college_id"/>
                            <field name="department_id" domain="[('college_id', '=', college_id)]" required="1"/>

                        </group>
                        <group>
                            <field name="batch_id"/>
                            <field name="faculty_id"/>
                            <field name="course_id"/>
                        </group>
                        <group>
                            <field name="date"/>
                            <field name="is_attendance_created" invisible="1"/>
                        </group>
                    </group>

                    <button name="action_create_attendance_line"
                            type="object"
                            string="Create Attendance Table"
                            class="oe_highlight"
                            invisible="is_attendance_created == True"
                            style="margin-bottom: 10px;"/>

                    <div invisible="is_attendance_created == False">
                        <button name="action_mark_all_present"
                                type="object"
                                string="Mark All as Present"
                                class="oe_highlight"
                                style="margin-right: 10px; background-color: #5fb18d;"/>
                        <button name="action_mark_all_absent"
                                type="object"
                                string="Mark All as Absent"
                                style="background-color: #e25151; color: white;"/>
                    </div>

                    <field name="attendance_line_ids" colspan="4">
                        <list editable="bottom" create="false" delete="false">
                            <field name="student_id" readonly="1"/>
                            <field name="status"/>
                        </list>
                    </field>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- List View -->
    <record id="university_attendance_view_list" model="ir.ui.view">
        <field name="name">university.attendance.view.list</field>
        <field name="model">university.attendance</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="batch_id"/>
                <field name="date"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <!-- Action -->
    <record id="university_attendance_action" model="ir.actions.act_window">
        <field name="name">Attendance</field>
        <field name="res_model">university.attendance</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Menu -->
    <menuitem id="university_attendance_menu"
              parent="menu_university_attendance_root"
              action="university_attendance_action"
              name="Student Attendance" sequence="0"/>
</odoo>