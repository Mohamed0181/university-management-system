<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <!-- Form view for university attendance line -->
    <record id="university_attendance_line_view_form" model="ir.ui.view">
        <field name="name">university.attendance.line.view.form</field>
        <field name="model">university.attendance.line</field>
        <field name="arch" type="xml">
            <form create="0" delete="0" edit="0">
                <sheet>
                    <h1>
                        <field name="name"/>
                    </h1>
                    <group>
                        <group string="Student Details">
                            <field name="student_id"/>
                            <field name="batch_id"/>
                        </group>
                        <group string="Attendance Info">
                            <field name="status" widget="radio"/>
                            <field name="date"/>
                        </group>
                    </group>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- List view for university attendance line -->
    <record id="university_attendance_line_view_list" model="ir.ui.view">
        <field name="name">university.attendance.line.view.list</field>
        <field name="model">university.attendance.line</field>
        <field name="arch" type="xml">
            <list create="0" delete="0">
                <field name="student_id"/>
                <field name="batch_id"/>
                <field name="date"/>
                <field name="status" widget="badge"
                       decoration-success="status=='present'"
                        decoration-danger="status=='absent'"
                />

            </list>
        </field>
    </record>

    <!-- Menu action: View attendance per student -->
    <record id="view_attendance_students_action" model="ir.actions.act_window">
        <field name="name">Student Attendance</field>
        <field name="res_model">university.attendance.line</field>
        <field name="view_mode">list,form</field>
        <field name="target">current</field>
        <field name="domain">[('student_id', '=', active_id)]</field>
    </record>

    <!-- Menu action: View attendance per batch -->
    <record id="view_attendance_batch_action" model="ir.actions.act_window">
        <field name="name">Batch Attendance</field>
        <field name="res_model">university.attendance.line</field>
        <field name="view_mode">list,form</field>
        <field name="target">current</field>
        <field name="domain">[('batch_id', '=', active_id)]</field>
    </record>
</odoo>