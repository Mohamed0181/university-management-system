<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- تقرير QWeb احترافي لطباعة تفاصيل الدفعة مع الطلاب -->
    <template id="report_university_batch_document_pdf" name="Batch Report PDF">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page" style="font-family: 'Lato', sans-serif; direction: rtl; color: #1e293b;">

                    <t t-foreach="docs" t-as="batch">
                        <!-- رأس التقرير -->
                        <div style="background-color: #2563eb; color: white; padding: 20px; text-align: center; margin-bottom: 30px;">
                            <h1 style="margin: 0; font-size: 24px;">تقرير الدفعة الجامعية</h1>
                            <h2 style="margin: 10px 0 0 0; font-size: 18px;">
                                <t t-esc="batch.name"/>
                            </h2>
                        </div>

                        <!-- معلومات الدفعة -->
                        <table style="width: 100%; margin-bottom: 25px; border: 1px solid #cbd5e1; border-collapse: collapse; font-size: 14px;">
                            <tr>
                                <td style="padding: 10px; border: 1px solid #cbd5e1;">السنة الأكاديمية</td>
                                <td style="padding: 10px; border: 1px solid #cbd5e1;">
                                    <t t-esc="batch.academic_year_id.name or 'غير محدد'"/>
                                </td>
                                <td style="padding: 10px; border: 1px solid #cbd5e1;">الكلية</td>
                                <td style="padding: 10px; border: 1px solid #cbd5e1;">
                                    <t t-esc="batch.college_id.name or 'غير محدد'"/>
                                </td>
                            </tr>
                            <tr>
                                <td style="padding: 10px; border: 1px solid #cbd5e1;">القوة المتوقعة</td>
                                <td style="padding: 10px; border: 1px solid #cbd5e1;">
                                    <t t-esc="batch.batch_strength or '0'"/>
                                </td>
                                <td colspan="2" style="padding: 10px; border: 1px solid #cbd5e1;"></td>
                            </tr>
                        </table>

                        <!-- الإحصائيات -->
                        <t t-set="total_students" t-value="len(batch.batch_student_ids)"/>
                        <t t-set="male_students"
                           t-value="len(batch.batch_student_ids.filtered(lambda x: x.gender == 'male'))"/>
                        <t t-set="female_students"
                           t-value="len(batch.batch_student_ids.filtered(lambda x: x.gender == 'female'))"/>

                        <table style="width: 100%; margin-bottom: 30px; border-collapse: collapse; font-size: 14px;">
                            <tr>
                                <td style="background-color: #3b82f6; color: white; padding: 12px; text-align: center;">
                                    إجمالي الطلاب
                                </td>
                                <td style="background-color: #10b981; color: white; padding: 12px; text-align: center;">
                                    الطلاب الذكور
                                </td>
                                <td style="background-color: #ec4899; color: white; padding: 12px; text-align: center;">
                                    الطالبات الإناث
                                </td>
                                <td style="background-color: #f59e0b; color: white; padding: 12px; text-align: center;">
                                    نسبة الامتلاء
                                </td>
                            </tr>
                            <tr>
                                <td style="border: 1px solid #e2e8f0; text-align: center;">
                                    <t t-esc="total_students"/>
                                </td>
                                <td style="border: 1px solid #e2e8f0; text-align: center;">
                                    <t t-esc="male_students"/>
                                </td>
                                <td style="border: 1px solid #e2e8f0; text-align: center;">
                                    <t t-esc="female_students"/>
                                </td>
                                <td style="border: 1px solid #e2e8f0; text-align: center;">
                                    <t t-if="batch.batch_strength > 0">
                                        <t t-esc="round((total_students * 100 / batch.batch_strength), 1)"/>%
                                    </t>
                                    <t t-else="">0%</t>
                                </td>
                            </tr>
                        </table>

                        <!-- جدول الطلاب -->
                        <h3 style="background-color: #1e293b; color: white; padding: 12px; font-size: 16px;">قائمة
                            الطلاب
                        </h3>
                        <table style="width: 100%; border-collapse: collapse; font-size: 13px; border: 1px solid #e2e8f0;">
                            <thead style="background-color: #4f46e5; color: white;">
                                <tr>
                                    <th style="padding: 10px; border: 1px solid #e2e8f0;">م</th>
                                    <th style="padding: 10px; border: 1px solid #e2e8f0;">رقم القيد</th>
                                    <th style="padding: 10px; border: 1px solid #e2e8f0;">اسم الطالب</th>
                                    <th style="padding: 10px; border: 1px solid #e2e8f0;">النوع</th>
                                    <th style="padding: 10px; border: 1px solid #e2e8f0;">القسم</th>
                                </tr>
                            </thead>
                            <tbody>
                                <t t-if="batch.batch_student_ids">
                                    <t t-set="counter" t-value="0"/>
                                    <t t-foreach="batch.batch_student_ids" t-as="student">
                                        <t t-set="counter" t-value="counter + 1"/>
                                        <tr t-attf-style="background-color: #{'f8fafc' if counter % 2 == 0 else 'ffffff'};">
                                            <td style="text-align: center; padding: 8px;">
                                                <t t-esc="counter"/>
                                            </td>
                                            <td style="text-align: center; padding: 8px;">
                                                <t t-esc="student.admission_no or 'غير محدد'"/>
                                            </td>
                                            <td style="padding: 8px;">
                                                <t t-esc="student.name"/>
                                            </td>
                                            <td style="text-align: center; padding: 8px;">
                                                <t t-if="student.gender == 'male'">ذكر</t>
                                                <t t-elif="student.gender == 'female'">أنثى</t>
                                                <t t-else="">غير محدد</t>
                                            </td>
                                            <td style="padding: 8px;">
                                                <t t-esc="student.department_id.name if student.department_id else 'غير محدد'"/>
                                            </td>
                                        </tr>
                                    </t>
                                </t>
                                <t t-else="">
                                    <tr>
                                        <td colspan="5" style="text-align: center; padding: 20px; color: #64748b;">
                                            لا توجد طلاب مسجلين في هذه الدفعة
                                        </td>
                                    </tr>
                                </t>
                            </tbody>
                        </table>

                        <!-- التوقيع والتذييل -->
                        <div style="margin-top: 40px; text-align: center; font-size: 13px;">
                            <p>
                                <strong>تاريخ الطباعة:</strong>
                                <t t-esc="datetime.datetime.now().strftime('%d/%m/%Y %H:%M')"/>
                            </p>
                            <div style="margin-top: 40px; border-top: 2px solid #cbd5e1; width: 300px; margin-left: auto; margin-right: auto; padding-top: 10px;">
                                توقيع المسؤول
                            </div>
                        </div>
                    </t>
                </div>
            </t>
        </t>
    </template>


    <record id="action_report_university_batch_pdf" model="ir.actions.report">
        <field name="name">تقرير الدفعة الجامعية</field>
        <field name="model">university.batch</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">education_university_management.report_university_batch_document_pdf</field>
        <field name="print_report_name">'تقرير الدفعة - %s' % (object.name)</field>
        <field name="binding_model_id" ref="model_university_batch"/>
        <field name="binding_type">report</field>
    </record>

</odoo>